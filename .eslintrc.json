{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nrwl/nx", "jsx-a11y", "sort-keys-fix"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "*",
                "onlyDependOnLibsWithTags": ["*"]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nrwl/nx/typescript","google"],
      "rules": {
        "camelcase": "off",
        "linebreak-style":"off",
        "max-len":"off",
        "require-jsdoc":"off",
        "sort-keys": "error",
        "sort-keys-fix/sort-keys-fix": "error",
        "space-infix-ops": "error"
      }
    }
  ]
}
